<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aydin.firebasedemo.WelcomeController"
      spacing="12" alignment="CENTER" stylesheets="@style.css" styleClass="root">
    <Label text="FirebaseDemo â€” Welcome" styleClass="title"/>
    <GridPane hgap="8" vgap="8">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="you@example.com"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="********"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Register"   onAction="#handleRegister"  styleClass="primary"/>
        <Button text="Sign In"    onAction="#handleSignIn"    styleClass="secondary"/>
    </HBox>

    <TextArea fx:id="logArea" editable="false" prefRowCount="5" prefWidth="360"/>
</VBox>

